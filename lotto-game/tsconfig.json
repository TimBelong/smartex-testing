{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["dom", "es6"],
    "jsx": "react-jsx",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "moduleResolution": "node",
    "resolveJsonModule": true,

    "sourceMap": true,
    "outDir": "./dist",

    "skipDefaultLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
